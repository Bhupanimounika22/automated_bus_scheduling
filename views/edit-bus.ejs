<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Bus</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
      <button class="btn btn-dark" onclick="window.history.back()">Back to Dashboard</button>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container mt-4">
    <h1>Edit Bus</h1>
    <form id="editBusForm" method="POST" action="/dashboard/bus/edit/<%= bus._id %>">
      <div class="mb-3">
        <label for="busId" class="form-label">Bus ID</label>
        <input type="text" class="form-control" id="busId" name="busId" value="<%= bus.busId %>" required>
      </div>
      <div class="mb-3">
        <label for="busType" class="form-label">Bus Type</label>
        <select class="form-select" id="busType" name="busType" required>
          <option value="Express" <% if (bus.busType === 'Express') { %> selected <% } %> >Express</option>
          <option value="Super Luxury" <% if (bus.busType === 'Super Luxury') { %> selected <% } %> >Super Luxury</option>
          <option value="Ultra Deluxe" <% if (bus.busType === 'Ultra Deluxe') { %> selected <% } %> >Ultra Deluxe</option>
          <option value="Indra" <% if (bus.busType === 'Indra') { %> selected <% } %> >Indra</option>
          <!-- Add other bus types here -->
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
