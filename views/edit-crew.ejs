<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Crew Details</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Edit Crew Details</h1>
        <div class="modal fade show d-block" id="crewEditModal" tabindex="-1" aria-labelledby="crewEditModalLabel" aria-hidden="true" style="background: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="crewEditModalLabel">Edit Crew Details</h5>
                        <button type="button" class="btn-close" onclick="closeModal()" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                      <form id="editCrewForm" method="POST">
                        <input type="hidden" id="crewId" value="<%= crew._id %>">
                        <div class="mb-3">
                                <label for="editFullName" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="editFullName" value="<%= crew.fullName %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="editRole" class="form-label">Role</label>
                                <select class="form-select" id="editRole" required>
                                    <option value="Driver" <%= crew.role === 'Driver' ? 'selected' : '' %>>Driver</option>
                                    <option value="Conductor" <%= crew.role === 'Conductor' ? 'selected' : '' %>>Conductor</option>
                                    <option value="Dispatcher" <%= crew.role === 'Dispatcher' ? 'selected' : '' %>>Dispatcher</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="editUniqueId" class="form-label">Unique ID</label>
                                <input type="text" class="form-control" id="editUniqueId" value="<%= crew.uniqueId %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="editEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editEmail" value="<%= crew.email %>" required>
                            </div>
                            <div class="mb-3">
                                <label for="editPhoneNum" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" id="editPhoneNum" value="<%= crew.phoneNum %>" required>
                            </div>
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
      function closeModal() {
        window.location.href = '/dashboard/crew';
      }

      document.getElementById('editCrewForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const crewId = document.getElementById('crewId').value;
        const updatedData = {
            fullName: document.getElementById('editFullName').value,
            role: document.getElementById('editRole').value,
            uniqueId: document.getElementById('editUniqueId').value,
            email: document.getElementById('editEmail').value,
            phoneNum: document.getElementById('editPhoneNum').value,
        };
    
        fetch(`/crew/${crewId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(updatedData),
        })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert(data.message); // Show success message
                    window.location.href = '/dashboard/crew'; // Redirect back to crew list
                } else {
                    alert('An error occurred while updating the crew details.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('An error occurred while updating the crew details.');
            });
      });
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
